<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/u52"
        android:id="@+id/item_course_icon"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/item_course_name"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#222"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text="东魏u类"
        app:layout_constraintBottom_toTopOf="@+id/item_course_intro"
        app:layout_constraintLeft_toRightOf="@id/item_course_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="法撒旦就"
        android:id="@+id/item_course_intro"
        android:textSize="18sp"
        android:textColor="#666"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_course_icon"
        app:layout_constraintTop_toBottomOf="@id/item_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>