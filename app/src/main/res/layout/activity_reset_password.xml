<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/email_et"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:inputType="textEmailAddress"
        android:hint="邮箱"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reset_ltv"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/main_rect_4"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <dong.lan.labelTextview.LabelTextView
        app:radius="2dp"
        android:text="fason"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/email_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/reset_ltv"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:bg_color="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <dong.lan.labelTextview.LabelTextView
        app:radius="2dp"
        android:text="已通过邮箱修改密码，则需重新登录"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/reset_ltv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/relogin_ltv"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:bg_color="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</android.support.constraint.ConstraintLayout>