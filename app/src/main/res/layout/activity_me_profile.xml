<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        app:title="账户信息"
        app:titleTextColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/bar_left"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/avatar_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/head_default"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/nickname_tv"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/avatar_img"
        android:textColor="#333"
        android:textSize="@dimen/sp_16"
        android:text="昵称:"
        app:layout_constraintLeft_toRightOf="@+id/nickname_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="text"
        android:maxLength="10"
        android:id="@+id/nickname_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/nickname_tv"
        android:layout_marginTop="25dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toBottomOf="@id/avatar_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sex_tv"
        android:layout_marginTop="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/nickname_et"
        android:textColor="#333"
        android:textSize="@dimen/sp_16"
        android:text="性别:"
        app:layout_constraintLeft_toRightOf="@+id/nickname_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/sex_rg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sex_tv"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/nickname_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/sex_rb_boy"
            android:text="男"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/sex_rb_girl"
            android:layout_marginLeft="20dp"
            android:text="女"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
        app:layout_constraintBottom_toTopOf="@id/logout"
        android:id="@+id/reset_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="修改密码"
        android:textColor="#fff"
        android:background="#1976D2"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="60dp" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/logout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="退出登录"
        android:textColor="#fff"
        android:background="#F44336"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="60dp" />
</android.support.constraint.ConstraintLayout>